# Depends: debianutils

source "/srv/debsources/etc/config.sh"
source "${bindir}/lib.sh"

event="$1"
if [ -z "$event" ] ; then
    err "Usage: visit-package EVENT [ARG...]" 3
fi
shift

hooks_dir="${bindir}/${event}.d"
if ! [ -d "$hooks_dir" ] ; then
    known_events=$(ls $bindir | grep '\.d$' | sed 's/.d$//')
    err "Unknown event '$event'.\nKnown events: $(echo $known_events)" 2
fi

args=""
for arg in "$@" ; do
    args="${args} --arg ${arg}"
done

run-parts --exit-on-error $args $hooks_dir
