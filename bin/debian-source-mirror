#!/bin/bash
# require debian package "debmirror"

root="/srv/debsources"
source "$root/etc/config.sh"
source "$root/bin/lib.sh"

debmirror \
  --source \
  --host=${mirror_host} \
  --method=rsync \
  --dist=${mirror_suites} \
  --section=${mirror_sections} \
  --arch=none \
  --ignore-release-gpg \
  $* \
  "$mirror_dir"
