# Extract all (new/unextracted) sources
#
# Options:
#     -q/--quiet    suppress all (non-error) output

source "/srv/debsources/etc/config.sh"
source "${bindir}/lib.sh"

if [ "$1" = "-q" -o "$1" = "--quiet" ] ; then
    shift
    verbose="0"
fi
srclist="$1"
if [ -z "$srclist" -o ! -f "$srclist" ] ; then
    err "Usage: extract-all SOURCES_LIST" 3
fi

extract_sources() {
    local sources_count=$(wc -l $srclist | cut -f 1 -d' ')
    stats_init "extract" "$sources_count"
    cat $srclist | \
	while read package version _area dsc dest ; do
	    stats_tick
	    flags=""
	    if [ "$verbose" = "0" ] ; then
		flags="$flags --quiet"
	    fi
	    if [ "$dsc" = "NONE" ] ; then
		continue
	    fi
	    if ! $bindir/extract-source $flags "$package" "$version" "$dsc" "$dest" ; then
		warn "failed to extract package '$package' '$version'"
	    fi
    done
}

extract_sources

info "extract-all: done."
