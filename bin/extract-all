#!/bin/bash

# Extract all (new/unextracted) sources
#
# Options:
#     -q/--quiet    suppress all (non-error) output

root="/srv/debsources"
source "$root/etc/config.sh"
source "$root/bin/lib.sh"

if [ "$1" = "-q" -o "$1" = "--quiet" ] ; then
    shift
    verbose="0"
fi
if [ -n "$1" -a -f "$1" ] ; then
    sources_list="$1"
    shift
else
    tmp_list=$(mktemp --tmpdir debsources.XXXXXXXXXX)
    trap "rm -f ${tmp_list}" EXIT

    info "listing available source packages..."
    if ! $bindir/list-sources --all > $tmp_list ; then
	err "cannot list available source packages. Abort." 2
    fi
    if [ -f "$sources_list" ] ; then
	mv "$sources_list" "${sources_list}.old"
    fi
    mv "$tmp_list" "$sources_list"
    chmod 664 "$sources_list"
    chgrp $gid "$sources_list"
fi

extract_sources() {
    local sources_count=$(wc -l $sources_list | cut -f 1 -d' ')
    info "extracting new source packages..."
    stats_init "extract" "$sources_count"
    cat $sources_list | \
	while read package version dsc dest ; do
	    stats_tick
	    flags=""
	    if [ "$verbose" = "0" ] ; then
		flags="$flags --quiet"
	    fi
	    if ! $bindir/extract-source $flags "$package" "$version" "$dsc" "$dest" ; then
		warn "failed to extract package '$package' '$version'"
	    fi
    done
}

extract_sources

info "extract-all: done."
